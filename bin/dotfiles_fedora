#!/bin/bash

# Emoji codes
CHECK_MARK="\xE2\x9C\x94"
X_MARK="\xE2\x9C\x96"
PIN="\xF0\x9F\x93\x8C"
CLOCK="\xE2\x8C\x9B"
ARROW="\xE2\x96\xB6"
BOOK="\xF0\x9F\x93\x8B"
HOT="\xF0\x9F\x94\xA5"
WARNING="\xF0\x9F\x9A\xA8"
RIGHT_ANGLE="\xE2\x88\x9F"

# Color codes
RESTORE='\033[0m'
NC='\033[0m'
BLACK='\033[00;30m'
RED='\033[00;31m'
GREEN='\033[00;32m'
YELLOW='\033[00;33m'
BLUE='\033[00;34m'
PURPLE='\033[00;35m'
CYAN='\033[00;36m'
SEA='\033[38;5;49m'
LIGHTGRAY='\033[00;37m'
LBLACK='\033[01;30m'
LRED='\033[01;31m'
LGREEN='\033[01;32m'
LYELLOW='\033[01;33m'
LBLUE='\033[01;34m'
LPURPLE='\033[01;35m'
LCYAN='\033[01;36m'
WHITE='\033[01;37m'
OVERWRITE='\e[1A\e[K'

DOTFILES_LOG="$HOME/.dotfiles.log"

# _header colorize the given argument with spacing
function _task {
    # if _task is called while a task was set, complete the previous
    if [[ $TASK != "" ]]; then
        printf "${OVERWRITE}${LGREEN} [âœ“]  ${LGREEN}${TASK}\n"
    fi
    # set new task title and print
    TASK=$1
    printf "${LBLACK} [ ]  ${TASK} \n${LRED}"
}

# _cmd performs commands with error checking
function _cmd {
    # create log if it doesn't exist
    if ! [[ -f $DOTFILES_LOG ]]; then
        touch $DOTFILES_LOG
    fi
    # empty dotfiles.log
    > $DOTFILES_LOG
    # hide stdout, on error we print and exit
    if eval "$1" 1> /dev/null 2> $DOTFILES_LOG; then
        return 0 # success
    fi
    # read error from log and add spacing
    printf "${OVERWRITE}${LRED} [X]  ${TASK}${LRED}\n"
    while read line; do
        printf "      ${line}\n"
    done < $DOTFILES_LOG
    printf "\n"
    # remove log file
    rm $DOTFILES_LOG
    # exit installation
    exit 1
}

set -e

# Paths
CONFIG_DIR="$HOME/.config/dotfiles"
VAULT_SECRET="$HOME/.ansible-vault/vault-password.txt"
DOTFILES_DIR="$HOME/.dotfiles"
SSH_DIR="$HOME/.ssh"
IS_FIRST_RUN="$HOME/.dotfiles_run"

# Install Ansible
# check lsb_release -si
if ! rpm -q ansible >/dev/null 2>&1; then
    _task "Installing Ansible"
    _cmd "sudo dnf install -y ansible"
    _cmd "sudo dnf install -y python3-argcomplete"
    _cmd "sudo activate-global-python-argcomplete3"
fi

# Check if python3 and pip is installed
if ! rpm -q python3 >/dev/null 2>&1; then
    _task "Installing Python3"
    _cmd "sudo dnf install -y python3"
fi
# Check if python3 and pip is installed
if ! dpkg -s python3 >/dev/null 2>&1; then
    _task "Installing Python3"
        _cmd "sudo dnf install -y python3"
fi
# Check if pip module watchdog is installed
if ! pip3 list | grep watchdog >/dev/null 2>&1; then
    _task "Installing Python3 Watchdog"
        _cmd "pip3 install watchdog"
fi

# Generate SSH keys
if ! [[ -f "$SSH_DIR/authorized_keys" ]]; then
    _task "Generating SSH keys"
        _cmd "mkdir -p $SSH_DIR"
        _cmd "chmod 700 $SSH_DIR"
        _cmd "ssh-keygen -b 4096 -t rsa -f $SSH_DIR/dotfiles_id_rsa -N '' -C $USER@$HOSTNAME"
        _cmd "cat $SSH_DIR/dotfiles_id_rsa.pub >> $SSH_DIR/authorized_keys"
fi

# Clone repository
if ! [[ -d "$DOTFILES_DIR" ]]; then
    _task "Cloning repository"
        _cmd "git clone --quiet https://github.com/lcividin/dotfiles.git $DOTFILES_DIR"
else
    _task "Updating repository"
        _cmd "git -C $DOTFILES_DIR pull --quiet"
fi

pushd "$DOTFILES_DIR" 2>&1 > /dev/null
_task "Updating Galaxy"
    _cmd "ansible-galaxy install -r requirements.yml"

_task "Running playbook"
if [[ -f $VAULT_SECRET ]]; then
    ansible-playbook --vault-password-file $VAULT_SECRET "$DOTFILES_DIR/main.yml" "$@"
else
    ansible-playbook "$DOTFILES_DIR/main.yml" "$@"
fi

popd 2>&1 > /dev/null

if ! [[ -f "$IS_FIRST_RUN" ]]; then
    echo -e "${CHECK_MARK} ${GREEN}First run complete!${NC}"
    echo -e "${ARROW} ${CYAN}Please reboot your computer to complete the setup.${NC}"
    touch "$IS_FIRST_RUN"
fi

# vi:ft=sh:
