  # active_color="glow(0xfff9e2af)"  # Catppuccin Yellow - golden glow
  # active_color="glow(0xffa6e3a1)"  # Catppuccin Green - nature glow
  # active_color="glow(0xff94e2d5)"  # Catppuccin Teal - ocean glow
  # active_color="glow(0xff89dceb)"  # Catppuccin Sky - bright cyan glow
