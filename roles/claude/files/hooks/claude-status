#!/usr/bin/env bash

# Read Claude status for a specific tmux pane
# Usage: claude-status %0  (called from tmux status-right)

PANE_ID="$1"
[ -z "$PANE_ID" ] && exit 0

# Strip % prefix for filename
PANE_NUM="${PANE_ID#%}"
STATUS_FILE="$HOME/.cache/claude-status/pane_${PANE_NUM}.status"

if [ -f "$STATUS_FILE" ]; then
  cat "$STATUS_FILE" 2>/dev/null
fi
