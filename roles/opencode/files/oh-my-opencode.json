    "build": {
      "model": "anthropic/claude-opus-4-5"
    },
    "plan": {
      "model": "anthropic/claude-opus-4-5"
    },
    "oracle": {
      "model": "anthropic/claude-opus-4-5"
    },
    "librarian": {
      "model": "anthropic/claude-opus-4-5"
    },
    "explore": {
      "model": "anthropic/claude-opus-4-5"
    },
    "frontend-ui-ux-engineer": {
      "model": "anthropic/claude-opus-4-5"
    },
    "document-writer": {
      "model": "anthropic/claude-opus-4-5"
    },
    "multimodal-looker": {
      "model": "anthropic/claude-opus-4-5"
